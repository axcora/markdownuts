---
layout: default.njk
---
{% set css %} {% include "style/start.css" %} {% endset %}
<style>{{ css | cssmin | safe }}</style>
<div class="container">
<h1><a href="{{page.url}}">{{title}}</a></h1>
<div class="content-section">
<h2>{{description}}</h2>
{{content|safe}}
</div>
</div>

<div class="container">
<div class="content-section">
<h2>{{doc}}</h2>
<div class="menu-list">
{%- for s in collections.docs | reverse | limit(6) -%}
<a href="{{s.url}}" class="menu-item">
<h3><span class="display-4">ðŸ“Œ</span><br/>{{s.data.title}}</h3>
<p>{{s.data.description}}</p>
<span class="price">{{s.data.info}}</span>
</a>{%- endfor -%}
</div>
</div>
</div>

<div class="container">
<div class="content-section">
<h2>{{themes}}</h2>
<div class="image-gallery">
{%- for tema in collections.themes | reverse | limit(6) -%}<a href="{{tema.url}}" class="gallery-item">
<img src="{{tema.data.image}}" alt="{{tema.data.title}}">
<div class="caption">{{tema.data.title}}</div>
</a>{%- endfor -%}
</div>
</div>
</div>


<div class="container">
<div class="content-section">
<h2>{{gal}}</h2>
<div class="polaroid-gallery">
{%- for pic in collections.images | reverse | limit(6) -%}<a href="/gallery/" class="polaroid">
<img src="{{ pic.src }}" alt="{{metadata.description}} {{pic.alt}}">
<div class="caption">{{pic.alt}}</div>
</a>{%- endfor -%}
</div>
</div>

